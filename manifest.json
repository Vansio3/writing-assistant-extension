{
  "manifest_version": 3,
  "name": "Gemini Writing Assistant",
  "version": "1.0.3",
  "description": "A Gemini-powered writing assistant triggered by a shortcut or context menu.",
  "homepage_url": "https://sites.google.com/view/gemini-writing-assistant",
  "permissions": [
  "activeTab",
  "storage",
  "contextMenus"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src https://generativelanguage.googleapis.com; style-src 'self' https://fonts.googleapis.com; font-src https://fonts.gstatic.com; img-src 'self' data:; object-src 'self';"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "generate-text": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Generate text with Gemini"
    },
    "dictate-and-process": {
      "suggested_key": {
        "default": "Alt+L"
      },
      "description": "Start or stop dictation"
    },
    "cycle-output-style": {
      "suggested_key": {
        "default": "Alt+O"
      },
      "description": "Cycle through output styles"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icons/icon-48.png"
  },
  "icons": {
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/audio/start.mp3", "assets/audio/end.mp3"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["constants.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}